<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard - Schedule Sync</title>
  <link rel="stylesheet" href="/css/admin.css">nk
</head>
<body>

<div class="container">

  
  <div class="sidebar">
    <h2>Schedule Sync</h2>

    <ul>
      <li>Dashboard</li>
      <li>Calendar</li>
      <li><a href="/approveLeave">Approve Leave</a></li>
      <li>Inbox</li>
    </ul>

    <div class="current-view">
      <button>Meeting</button>
      <button>Scheduling</button>
    </div>
    <div class="upcoming-event">
      <button>Upcoming Event</button>
    </div>
  </div>

  
  
  <div class="main">
    <div class="header">
      <div class="datetime">
        <div><strong>Today</strong><br><%= new Date().toLocaleDateString() %></div>
        <div style="color: #3b82f6;"><%= new Date().toLocaleTimeString() %></div>
      </div>

      <div class="user-info">
        <img src="/uploads/<%= user.profilePic %>" alt="Admin Image">
        <span>Logged in as <%= user.name %> (<%= user.role %>)</span>
        <form action="/logout" method="POST" class="logout-form">
          <button type="submit"> Logout</button>
        </form>
      </div>

    </div>

    <div class="time-table-section">
      <div class="time-table-header">
        <form id="teacherForm" method="get" action="/admin">
          <select name="teacherId" id="teacherSelect" onchange="document.getElementById('teacherForm').submit()">
            <% teachers.forEach(teacher => { %>
              <option value="<%= teacher._id %>" <%= teacher._id.toString() === selectedTeacherId ? 'selected' : '' %>>
                <%= teacher.name %> - <%= teacher.email %>
              </option>
            <% }) %>
          </select>
        </form>

        <h3>Time Table</h3>

        <button class="add-btn" onclick="goToAssignPage()">Add Time Table Details</button>
      </div>

      <table>
        <thead>
          <tr>
            <th>Days/Time</th>
            <% for (let i = 1; i <= 8; i++) { %>
              <th>Period <%= i %></th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% const days = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday']; %>
          <% days.forEach(day => { %>
            <tr>
              <td><strong><%= day %></strong></td>
              <% for (let i = 1; i <= 8; i++) {
                const lectureName = 'Period ' + i;
                const entry = timetableData.find(item => item.day === day && item.lecture === lectureName);
              %>
                <td>
                  <% if (entry) { %>
                    <div class="lecture-box">
                      <div><strong><%= entry.subject %></strong></div>
                      <div><%= entry.startTime %> - <%= entry.endTime %></div>
                      <div>Room: <%= entry.room %></div>
                      <form action="/assign-timetable/delete" method="POST" class="delete-form">
                        <input type="hidden" name="teacherId" value="<%= selectedTeacherId %>">
                        <input type="hidden" name="day" value="<%= day %>">
                        <input type="hidden" name="lecture" value="<%= lectureName %>">
                        <button type="submit" class="delete-btn" title="Delete Lecture">Ã—</button>
                      </form>
                    </div>
                  <% } else { %>
                    --
                  <% } %>
                </td>
              <% } %>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
  <script src="/js/admin.js"></script>
</body>
</html>
