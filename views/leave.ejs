<!DOCTYPE html>
<html>
<head>
  <title>Apply for Leave</title>
  <link rel="stylesheet" href="/css/user.css">
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f4f6f8;
    }
    .content {
      margin-left: 250px;
      padding: 40px 20px;
      min-height: 100vh;
      box-sizing: border-box;
    }
    .leave-container {
      background: #ffffff;
      padding: 30px;
      max-width: 600px;
      margin: 30px auto;
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.06);
    }
    .user-info {
      text-align: center;
      margin-bottom: 20px;
    }
    .user-info h4 {
      margin: 0;
      font-size: 1.2em;
      color: #333;
    }
    h2, h3 {
      text-align: center;
      color: #2c3e50;
      margin-bottom: 25px;
    }
    label {
      display: block;
      margin-bottom: 6px;
      font-weight: 600;
      color: #333;
    }
    input[type="date"],
    textarea {
      width: 100%;
      padding: 10px;
      margin-bottom: 18px;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 1em;
      transition: border-color 0.3s ease;
    }
    input[type="date"]:focus,
    textarea:focus {
      border-color: #007bff;
      outline: none;
    }
    textarea {
      resize: vertical;
    }
    button {
      display: block;
      width: 100%;
      background-color: #007bff;
      color: white;
      border: none;
      padding: 12px;
      border-radius: 6px;
      font-size: 1em;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
    button:hover {
      background-color: #0056b3;
    }
    .success, .error {
      text-align: center;
      padding: 10px;
      border-radius: 5px;
      margin-bottom: 20px;
      font-weight: bold;
    }
    .success {
      background-color: #d4edda;
      color: #155724;
      border: 1px solid #c3e6cb;
    }
    .error {
      background-color: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 30px;
    }
    table th, table td {
      border: 1px solid #ccc;
      padding: 10px;
      text-align: center;
    }
    table th {
      background-color: #f0f0f0;
    }
    .delete-button {
      background-color: red;
      color: white;
      border: none;
      padding: 6px 12px;
      border-radius: 4px;
      cursor: pointer;
    }
    @media (max-width: 768px) {
      .content {
        margin-left: 0;
        padding: 20px;
      }
      .leave-container {
        padding: 20px;
      }
    }
  </style>
</head>
<body>

  <%- include('partials/userSidebar') %>

  <div class="content">
    <%- include('partials/userHeader', { user: user }) %>

    <div class="leave-container">
      <div class="user-info">
        <% if (user && user.name) { %>
          <h4><%= user.name %></h4>
        <% } %>
      </div>

      <h2>Apply for Leave</h2>

      <% if (successMessage) { %>
        <div class="success"><%= successMessage %></div>
      <% } %>

      <% if (errorMessage) { %>
        <div class="error"><%= errorMessage %></div>
      <% } %>

      <form method="POST" action="/leave/apply-leave">        
        <label for="date">Date:</label>
        <input type="date" name="date" required>

        <label for="reason">Reason:</label>
        <textarea name="reason" rows="4" required></textarea>

        <button type="submit">Apply Leave</button>
      </form>

      <% if (lectures && lectures.length > 0) { %>
        <h3>Lectures on <%= lectures[0].day %></h3>
        <table>
          <thead>
            <tr>
              <th>Lecture</th>
              <th>Subject</th>
              <th>Time</th>
              <th>Room</th>
            </tr>
          </thead>
          <tbody>
            <% lectures.forEach(function(lecture) { %>
              <tr>
                <td><%= lecture.lecture %></td>
                <td><%= lecture.subject %></td>
                <td><%= lecture.startTime %> - <%= lecture.endTime %></td>
                <td><%= lecture.room %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else if (typeof lectures !== 'undefined') { %>
        <p style="text-align:center; margin-top: 20px;">No lectures found on that day.</p>
      <% } %>

      <% if (leaveRequests && leaveRequests.length > 0) { %>
        <h3>Your Leave Requests</h3>
        <table>
          <thead>
            <tr>
              <th>Date</th>
              <th>Reason</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% leaveRequests.forEach(function(request) { %>
              <tr>
                <td><%= request.date.toDateString() %></td>
                <td><%= request.reason %></td>
                <td>
                  <% if (request.status === 'Pending') { %>
                    <span style="color: orange;">Pending</span>
                  <% } else if (request.status === 'Approved') { %>
                    <span style="color: green;">Approved</span>
                  <% } else { %>
                    <span style="color: red;">Rejected</span>
                  <% } %>
                </td>
                <td>
                  <form method="POST" action="/leave/delete/<%= request._id %>" onsubmit="return confirm('Are you sure ?');">
                    <button type="submit" class="delete-button">Delete</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <p style="text-align:center; margin-top: 20px;">No leave requests yet.</p>
      <% } %>
    </div>
  </div>

</body>
</html>  
